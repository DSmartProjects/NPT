<UserControl
    x:Class="VideoKallMCCST.Results.PulseOximeterResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoKallMCCST.Results"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Pulse oximenter Test Procedure"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" FontSize="20" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="15 0 0 0"></TextBlock>
        <TextBlock Text="Status:"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="15" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="15 0 0 0"></TextBlock>
        <TextBlock Text="Deployed"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" FontSize="15" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="15 0 0 0"></TextBlock>
        <TextBlock x:ConnectionId='2' x:Name="TxtSpiroMeterConnectionStatus"  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" FontSize="15" VerticalAlignment="Stretch" HorizontalAlignment="Left"></TextBlock>

        <TextBlock Text="1. Suggest user to Place figer in Pulse oximeter. Stream Data once Reading started."  
                   TextWrapping="Wrap" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="8" FontSize="15" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="15 0 0 0"></TextBlock>
        <Button x:ConnectionId='3' Content="Stream Data" x:Name="BtnStreamdata"  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5" FontSize="15" VerticalAlignment="Stretch" HorizontalAlignment="Center"                             ></Button>
       
        <Button x:ConnectionId='4' Content="Done" x:Name="BtnStreamdataDone" Visibility="Collapsed"  Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="5" FontSize="15" VerticalAlignment="Stretch" HorizontalAlignment="Center"                                />

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Grid.RowSpan="100" BorderBrush="Blue" BorderThickness="3"></Border>
    </Grid>
</UserControl>

